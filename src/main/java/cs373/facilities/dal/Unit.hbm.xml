<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="cs373.facilities.model.facility">
    <class name="Unit" table="unit">

        <id name="unitID" column="unitid"/>

        <property name="capacity" type="int" column="capacity"/>
        <one-to-one name="schedule" class="cs373.facilities.model.scheduling.Schedule" cascade="save-update, delete"></one-to-one>
        <one-to-one name="maintenanceSchedule" type="cs373.facilities.model.scheduling.Schedule" cascade="save-update, delete"></one-to-one>

        <list name="inspectionRequests" table="inspectionrequest" cascade="all">
            <key column="id" not-null="true"/>
            <list-index column="idx"/>
            <one-to-many class="cs373.facilities.maintenance.InspectionRequest"/>
        </list>

        <list name="pastInspectionsLog" table="inspectionrequest" cascade="all">
            <key column="id" not-null="true"/>
            <list-index column="idx"/>
            <one-to-many class="cs373.facilities.maintenance.InspectionRequest"/>
        </list>

    </class>
</hibernate-mapping>
