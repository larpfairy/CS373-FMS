<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="cs373.facilities.model.scheduling">
    <class name="Event" table="event">
        <id name="eventID" column="eventid"/>
        <property name="description" type="string" column="description"/>
        <property name="start" type="" column="start"/> // TODO
        <property name="stop" type="" column="stop"/>   // TODO
        <property name="isMaintenance" type="boolean" column="ismaintenance"/>
        <property name="technician" type="string" column="technician"/>
        <property name="cost" type="double" column="cost"/>
	</class>
</hibernate-mapping>
